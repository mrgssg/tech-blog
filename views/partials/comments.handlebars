<div class="comments">
    {{#each this}}
    <div class="card">
        <h3 class="card-header"></h3>
        <section class="comment card-body">
            <div class="text">
                {{comment_text}}
                <div class="meta">
                    -{{user.name}}, {{format_date created_date}}
                </div>
            </div>
        </section>
    </div>
    {{/each}}
</div>
